
<div class="row justify-content-center">
  <div class="col-xl-6 col-lg-10 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            
          <div class="col-lg-12">
            <div class="p-5">
              <div class="text-center">
                  <h1 class="h2 text-gray-900 mb-4">Log in</h1>
              </div>
              
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  
                  <div class="form-group">                                
                  <%= f.email_field :email, autofocus: true, class:"form-control form-control-user", placeholder:"Enter Email Address..." %>                                    
                  </div>
                  <div class="form-group">
                      <%= f.password_field :password, class:"form-control form-control-user", placeholder:"Password" %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <label>
                      <%= f.check_box :remember_me %> Lembrar-me                                                      
                    </label>
                  <% end %>                                                                        
                  
                  <div class="actions">
                  <%= f.submit "Log in", class:"btn btn-primary btn-user btn-block" %>                                   
                  </div>
                  <% end %>

                  <hr>                               
              
                <div class="text-center">
                  <%= render "admins/shared/links" %>
                 </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

