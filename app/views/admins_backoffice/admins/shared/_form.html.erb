<div class="container">  
    <!-- Nested Row within Card Body -->
  <div class="row">      
    <div class="p-5">
        <div class="text-center">
          <h1 class="h4 text-gray-900 mb-4"><%= "#{action_message} Conta "%></h1>
        </div>

        <% if @admin.errors.any? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">            
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" ></button>
              <ul>
                <% @admin.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>

        <%= form_with(model: [:admins_backoffice, @admin], local: true) do |form| %> 
            <div class="form-group row">                                    
              <div class="col-sm-6 mb-3 mb-sm-0">                                      
                <%= form.text_field :first_name, class:"form-control  form-control-user", placeholder: "First Name" %>                                        
              </div>
              <div class="col-sm-6">
                <%= form.text_field :last_name, class:"form-control  form-control-user", placeholder:"Last Name" %>                                            
              </div>
            </div>
              <div class="form-group">
                <%= form.text_field :email, class:"form-control  form-control-user", placeholder: "Email Address" %>                                    
              </div>
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <%= form.text_field :password, class:"form-control  form-control-user", placeholder: "Password" %>                                    
            </div>
            <div class="col-sm-6">
              <%= form.text_field :password, class:"form-control  form-control-user", placeholder:"Repeat Password" %>                                       
            </div>
          </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">Salvar</button>                                                                          
        <% end %>   
    </div>      
  </div>
</div>