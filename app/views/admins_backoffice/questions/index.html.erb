<h1>Listando Questões</h1>

 <div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Assunto/Área</th>
                <th>Questão</th>
                <th><%= link_to new_admins_backoffice_question_path, class: "btn-sm btn-success btn-circle" do %>
                    <i class="fas fa-plus"></i></th>  
                    <% end %>
                                
            </tr>
        </thead>
        
        <tbody>
            <% @questions.each do |question| %>
            <tr>             
                <td><%= question.subject.description %></td>
                <td><%= question.description.truncate(60) %></td>
                <td style="width: 120px"> 
                  <%= link_to admins_backoffice_question_path(question), class: "btn-sm btn-primary btn-circle" do %>
                    <i class="fas fa-user"></i>
                  <% end %>
                  <%= link_to edit_admins_backoffice_question_path(question), class: "btn-sm btn-secondary btn-circle" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to admins_backoffice_question_path(question), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn-sm btn-danger btn-circle" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>                  
                </td>               
            </tr>
            <% end %>
                
        </tbody>
    </table>
    
    <%= paginate @questions %>
</div>