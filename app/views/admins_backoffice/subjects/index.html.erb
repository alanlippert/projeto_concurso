<h1>Listando Assuntos/Áreas</h1>

 <div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Descrição</th>                
                <th><%= link_to new_admins_backoffice_subject_path, class: "btn-sm btn-success btn-circle" do %>
                    <i class="fas fa-plus"></i></th>  
                    <% end %>
                                
            </tr>
        </thead>
        
        <tbody>
            <% @subjects.each do |subject| %>
            <tr>             
                <td><%= subject.description %></td>              
                <td style="width: 120px"> 
                  <%= link_to admins_backoffice_subject_path(subject), class: "btn-sm btn-primary btn-circle" do %>
                    <i class="fas fa-user"></i>
                  <% end %>
                  <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn-sm btn-secondary btn-circle" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to admins_backoffice_subject_path(subject), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn-sm btn-danger btn-circle" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>                  
                </td>               
            </tr>
            <% end %>
                
        </tbody>
    </table>
    
    <%= paginate @subjects %>
</div>