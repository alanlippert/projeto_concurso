<div class="text-center">
  <h1 class="h4 text-gray-900 mb-4"><%= "#{action_message} Assunto "%></h1>
</div>

<% if @subject.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">            
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" ></button>
      <ul>
        <% @subject.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<%= form_with(model: [:admins_backoffice, @subject], local: true) do |form| %> 
  
      <div class="mb-3">
        <%= form.text_field :description, class:"form-control  form-control-user", placeholder: "Assunto" %>                                    
      </div>            
    
      <button type="submit" class="btn btn-primary">Salvar</button> 
<% end %>   
